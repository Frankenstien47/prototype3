<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/userLogin.css">
    <style>
        #timer {
            font-size: 1.2rem;
            font-weight: bold;
            color: #dc3545;
            margin-bottom: 10px;
        }

        #resendButton {
            display: none;
        }

        .otp-input {
            letter-spacing: 2px;
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="main-container">
        <div class="left-side">
            <nav class="navbar">
                <a class="navbar-brand" href="#">
                    <img src="/images/logo.svg" alt="Logo">
                </a>
            </nav>

            <div class="login-container">
                <h1>Verify OTP</h1>
                <% if (error) { %>
                    <div class="alert " style="color: #dc3545;">
                        <%= error_msg %>
                    </div>
                    <% } %>

                        <p>We've sent an OTP to <%= email %>.</p>
                        <div id="timer">Time remaining: 2:00</div>

                        <form id="otpForm" method="POST" action="/user/verify-otp">
                            <div class="form-group">
                                <input type="text" class="form-control otp-input" name="otp" id="otpInput"
                                    placeholder="Enter OTP" maxlength="6" required>
                            </div>
                            <button type="submit" class="btnLogin">Verify OTP</button>
                        </form>

                        <div class="mt-3">
                            <button id="resendButton" class="btn btn-primary" style="display: none;">
                                Resend OTP
                            </button>
                        </div>

                        <div class="mt-3">
                            <a href="/user/signup" class="btn btn-link">Back to Signup</a>
                        </div>
            </div>
        </div>

        <div class="right-side">
            <img src="/images/loginbg.webp" alt="Right Side Image">
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const timerDisplay = document.getElementById('timer');
            const resendButton = document.getElementById('resendButton');
            const otpInput = document.getElementById('otpInput');
            const otpForm = document.getElementById('otpForm');

            const totalTime = 120; // 2 minutes in seconds
            let timeLeft = parseInt(localStorage.getItem('otpTimeLeft')) || totalTime;
            let timerInterval;

            function startTimer() {
                clearInterval(timerInterval);
                timerInterval = setInterval(updateTimer, 1000);
                updateTimer();
            }

            function updateTimer() {
                if (timeLeft > 0) {
                    const minutes = Math.floor(timeLeft / 60);
                    const seconds = timeLeft % 60;
                    timerDisplay.textContent = `Time remaining: ${minutes}:${seconds.toString().padStart(2, '0')}`;
                    timeLeft--;
                    localStorage.setItem('otpTimeLeft', timeLeft);
                } else {
                    clearInterval(timerInterval);
                    timerDisplay.textContent = 'OTP expired';
                    resendButton.style.display = 'block';
                    resendButton.disabled = false;
                    otpInput.disabled = true;
                    localStorage.removeItem('otpTimeLeft');
                }
            }

            // Start timer when the page loads
            startTimer();

            // OTP input formatting
            otpInput.addEventListener('input', function (e) {
                e.target.value = e.target.value.replace(/[^0-9]/g, '');
            });

            // Resend button click handler
            resendButton.addEventListener('click', function () {
                resendButton.disabled = true;

                // AJAX call to resend OTP
                $.ajax({
                    url: '/user/resend-otp',
                    method: 'POST',
                    success: function (response) {
                        if (response.success) {
                            alert('New OTP sent successfully');
                            timeLeft = totalTime;
                            localStorage.setItem('otpTimeLeft', timeLeft);
                            otpInput.disabled = false;
                            otpInput.value = '';
                            resendButton.style.display = 'none';
                            startTimer();
                        } else {
                            alert('Error sending OTP. Please try again.');
                            resendButton.disabled = false;
                        }
                    },
                    error: function () {
                        alert('Error sending OTP. Please try again.');
                        resendButton.disabled = false;
                    }
                });
            });

            // Prevent form submission if OTP has expired
            otpForm.addEventListener('submit', function (e) {
                if (timeLeft <= 0) {
                    e.preventDefault();
                    alert('OTP has expired. Please request a new one.');
                }
            });
        });
    </script>
</body>

</html>