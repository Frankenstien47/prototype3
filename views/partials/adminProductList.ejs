<link href="https://cdn.jsdelivr.net/npm/@sweetalert2/theme-dark@4/dark.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="/stylesheets/adminProductList.css">
<div class="main-content">

    <div class="container mt-5">
        <div class="text-center mt-4">
            <a href="/admin/products/add" class="add-product-btn btn-success" style="text-decoration: none;">
                <i class="fa fa-plus"></i> Add Product
            </a>
        </div>
        <br>

        <table class="table table-bordered table-dark table-striped">
            <thead class="thead-light">
                <tr>
                    <th>Product Name</th>
                    <th>Variant</th>
                    <th>Price </th>
                    <th>Stock</th>
                    <th>Images</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (Array.isArray(products) && products.length> 0) { %>
                    <% products.forEach(function(product) { %>
                        <tr>
                            <td>
                                <%= product.productName %>
                            </td>
                            <td>
                                <%= product.variant %>
                            </td>
                            <td>â‚¹<%= product.price %>
                            </td>
                            <td>
                                <%= product.stock %>
                            </td>
                            <td class="imageContainer">
                                <% product.images.forEach(function(image) { %>
                                    <img src="<%= image %>" alt="<%= product.productName %>"
                                        style="width: 100px; margin: 5px;">
                                    <% }) %>
                            </td>
                            <td>
                                <% if (product.status==='listed' ) { %>
                                    <span class="badge bg-success">Listed</span>
                                    <% } else { %>
                                        <span class="badge bg-danger">Unlisted</span>
                                        <% } %>
                            </td>
                            <td>
                                <div class="btnContainer">
                                    <!-- product Delete -->
                                    <form action="/admin/products/delete/<%= product._id %>" method="POST"
                                        style="display:inline;"
                                        onsubmit="return confirm('Are you sure you want to delete this product?');">
                                        <button class="btn btn-danger">Delete</button>
                                    </form>
                                    <!-- product List & Unlist -->
                                    <form action="#"
                                        onsubmit="event.preventDefault(); toggleProductStatus('<%= product._id %>', '<%= product.status %>');"
                                        style="display:inline;">
                                        <button type="submit"
                                            class="btn <%= product.status === 'listed' ? 'btn-warning' : 'btn-success' %>">
                                            <%= product.status==='listed' ? 'Unlist' : 'List' %>
                                        </button>
                                    </form>

                                    <!-- product edit -->
                                    <a href="/admin/products/edit/<%= product._id %>" class="btn btn-primary"
                                        style="display:inline;">
                                        Edit
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="7">No products found.</td>
                                </tr>
                                <% } %>
            </tbody>
        </table>


    </div>
</div>
<style>
    body {
        background-color: #F4F3F2 !important;
        color: #272727 !important;
    }

    .swal-orange-title {
        color: rgb(255, 162, 0);
    }

    .success {
        color: green;
    }
</style>

<script>
    function toggleProductStatus(productId, currentStatus) {
        const action = currentStatus === 'listed' ? 'unlist' : 'list';
        const capitalizedAction = action.charAt(0).toUpperCase() + action.slice(1);

        Swal.fire({
            title: `${capitalizedAction} Product?`,
            text: `Are you sure you want to ${action} this product?`,
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: `Yes, ${action} it!`,
            cancelButtonText: 'Cancel',
            confirmButtonColor: currentStatus === 'listed' ? '#ff9800' : '#4CAF50',
            background: '#F4F3F2',
            color: '#000000',
            customClass: {
                title: 'swal-orange-title',

            }
        }).then((result) => {
            if (result.isConfirmed) {
                // Show loading state
                Swal.fire({
                    title: 'Processing...',
                    text: `${capitalizedAction}ing product...`,
                    allowOutsideClick: false,
                    allowEscapeKey: false,
                    showConfirmButton: false,
                    didOpen: () => {
                        Swal.showLoading();
                    },
                    background: '#F4F3F2',
                    color: '#000000'
                });

                // Submit the form
                fetch(`/admin/products/toggle/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                title: 'Success!',
                                text: `Product has been ${action}ed successfully!`,
                                icon: 'success',
                                confirmButtonColor: '#4CAF50',
                                background: '#F4F3F2',
                                color: '#000000',
                                customClass: {
                                    title: 'success'
                                }
                            }).then(() => {
                                window.location.reload();
                            });
                        } else {
                            throw new Error(data.message || 'Something went wrong');
                        }
                    })
                    .catch(error => {
                        Swal.fire({
                            title: 'Error!',
                            text: error.message,
                            icon: 'error',
                            confirmButtonColor: '#f44336',
                            background: '#F4F3F2',
                            color: '#000000'
                        });
                    });
            }
        });
    }

</script>